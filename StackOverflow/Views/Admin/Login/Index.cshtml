@{
  ViewBag.Title = "Đăng nhập";
  Layout = "";
}
@model StackOverflow.ViewModels.UserLoginViewModel
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Đăng nhập Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
    }
    .login-card {
      max-width: 400px;
      margin: 80px auto;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    .login-card .card-body {
      padding: 2rem;
    }
  </style>
</head>
<body>
<div class="container">
  <div class="card login-card">
    <div class="card-body">
      <h3 class="text-center mb-4">Admin Login</h3>
      @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
      {
        <div class="mb-3">
          @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "form-label" })
          @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control", placeholder = $"Nhập tên đăng nhập" })
          @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger fst-italic" })
        </div>

        <div class="mb-3">
          @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
          @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", placeholder = $"Nhập mật khẩu" })
          @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger fst-italic" })
        </div>
        <button type="submit" class="btn btn-primary w-100">Log in</button>
      }
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
