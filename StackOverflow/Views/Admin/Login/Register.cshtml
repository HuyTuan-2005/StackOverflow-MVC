@{
  ViewBag.Title = "Đăng ký";
}

@model StackOverflow.ViewModels.UserLoginViewModel
@{
  Layout = "";
}
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Đăng nhập Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
  body {
    background-color: #f8f9fa;
    font-family: Arial, sans-serif;
  }

  .auth-container {
    max-width: 400px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .logo {
    display: block;
    margin: 0 auto 20px;
    width: 200px;
  }

  .btn-social {
    text-align: left;
  }

  .btn-social i {
    margin-right: 10px;
  }

  .divider {
    position: relative;
    text-align: center;
    margin: 20px 0;
  }

  .divider::before,
  .divider::after {
    content: '';
    display: inline-block;
    width: 40%;
    height: 1px;
    background-color: #d6d9dc;
    vertical-align: middle;
  }

  .divider span {
    padding: 0 10px;
    color: #6a737c;
    font-size: 14px;
  }

  .auth-footer {
    text-align: center;
    margin-top: 20px;
  }

  .auth-footer a {
    text-decoration: none;
    color: #007bff;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  .form-check-label a {
    color: #007bff;
    text-decoration: underline;
  }

  .form-check-label a:hover {
    color: #0056b3;
  }
  .validation-summary-errors ul{
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>

</head>
<body>

<div class="container">
  <div class="auth-container">
    <!-- Logo -->
    <h3 class="text-center my-3">Admin Register</h3>
    <!-- Sign Up Form -->
    @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
    {
      <div class="mb-3">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = $"Nhập tên đăng nhập" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
      </div>
     
      <div class="mb-3">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = $"Nhập mật khẩu" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
      </div>
      @Html.ValidationSummary(true, "", new { @class = "text-danger fst-italic mb-3" })
      <button type="submit" class="btn btn-primary w-100">Sign Up</button>
    }
