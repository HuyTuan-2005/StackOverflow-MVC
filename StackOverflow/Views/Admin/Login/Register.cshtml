
@{
    ViewBag.Title = "Register";
}


@{
    ViewBag.Title = "Đăng nhập";
    Layout = "";
}
@model StackOverflow.ViewModels.UserRegisterAdminViewModel
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng ký Admin</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
        }

        .login-card {
            max-width: 400px;
            margin: 80px auto;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

            .login-card .card-body {
                padding: 2rem;
            }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card login-card">
            <div class="card-body">
                <h3 class="text-center mb-4">Admin Register</h3>
                @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
                {
                    <div class="mb-3">
                        @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control", placeholder = $"Nhập tên đăng nhập" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger fst-italic" })
                    </div>

                    <div class="mb-1">
                        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", placeholder = $"Nhập mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger fst-italic" })
                    </div>
                    <div class="mb-1">
                        @Html.LabelFor(m => m.Key, htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Key, htmlAttributes: new { @class = "form-control", placeholder = $"Nhập key" })
                        @Html.ValidationMessageFor(m => m.Key, "", new { @class = "text-danger fst-italic" })
                    </div>
                    <div class="mb-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger fst-italic" })
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                }

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

