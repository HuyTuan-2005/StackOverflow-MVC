    <!-- Footer Links -->
    <div class="auth-footer mt-3">
      <p class="mb-1">
        Bạn đã có tài khoản? <a href="@Url.Action("Login")">Log in</a>
      </p>
    </div>
  </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



