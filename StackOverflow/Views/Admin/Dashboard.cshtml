            <div class="table-header">
                <h4><i class="bi bi-table me-2"></i>Danh sách người dùng</h4>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Tên Hiển Thị</th>
                            <th>Ngày Sinh</th>
                            <th>Giới Tính</th>
                            <th>Trạng Thái</th>
                            <th>Hoạt Động Cuối</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var i in Model)
