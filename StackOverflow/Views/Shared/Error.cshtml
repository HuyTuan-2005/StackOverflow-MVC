@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lỗi Ứng Dụng";
}

<div class="container my-5 text-center">
    <section class="mb-4">
        <h1 class="display-4 text-danger">Lỗi xảy ra</h1>
        <p class="lead text-secondary">Rất tiếc, ứng dụng gặp sự cố không mong muốn.</p>
    </section>

    <section class="mb-4 p-3 bg-light rounded">
        <h2 class="h5">Thông tin chi tiết lỗi</h2>
        <dl class="text-start">
            <dt>Controller:</dt>
            <dd>@Model.ControllerName</dd>

            <dt>Action:</dt>
            <dd>@Model.ActionName</dd>

            <dt>Exception Message:</dt>
            <dd class="text-monospace bg-white p-2 rounded">@Model.Exception.Message</dd>
        </dl>
    </section>

    <section>
        <a href="/" class="btn btn-primary px-4">Quay lại Trang chủ</a>
    </section>
</div>